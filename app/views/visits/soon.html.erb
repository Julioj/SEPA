        <td><%= link_to 'Ver detalle', company_path(visit.companyId) %></td>
        <td><%= link_to 'Editar', edit_visit_path(visit) %></td>
        <td><%= link_to 'Eliminar', visit, method: :delete%></td>
      </tr>
    <% end %>
  </tbody>
</table>

